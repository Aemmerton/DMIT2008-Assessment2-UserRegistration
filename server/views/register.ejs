<!-- HTML template for user Registration -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration Form</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <ul >
          <li><a href="index.html">home</a></li>
          <li><a href="login">account login</a></li>
      </ul>
  </nav>
   

    <aside class="app-form">
      <header class="form-header"><h2>Create Your Account</h2></header>
    
      <form id="register" action="/register" method="POST">
        
        <div class="form-control">
            <label for="username">Enter Username 
              
              <span class="warning"><%- usernameWarning %></span></label>
            <input
              id="username"
              type="text"
              name="username"
              placeholder="Username"
              value="<%-username%>"
            />
       
          </div>

        <div class="form-control">
          <label for="email">Enter your Email
            
            <span class="warning"><%- emailWarning %></span></label>
          <input
            id="email"
            type="text"
            name="email"
            placeholder="account@email.com"
            value="<%-email%>"
          />
     
        </div>

        <div class="form-control">
          <label for="password">
            Enter a password 
            <span class="warning"><%- passwordWarning %> </span></label>
          <input
            id="password"
            type="text"
            name="password"
            placeholder="account password "
            value="<%- password %>"
          />
        </div>

        <div class="form-control">
          <button type="submit">create account</button>
        </div>
      </form>
    </aside>
    <script src="js/forms.js"></script>
  </body>
</html>
